\newcounter{multbib} 
\setcounter{multbib}{0}
\def\thebibliography#1[#2]{%
    \subsection*{#2}{\markboth{}{}}%
    \list{[\arabic{enumi}]}{\settowidth\labelwidth{[#1]}\leftmargin\labelwidth
                            \advance\leftmargin\labelsep \usecounter{enumi}}
    \setcounter{enumi}{\value{multbib}} 
    \def\newblock{\hskip .11em plus.33em minus.07em} 
    \sloppy\clubpenalty4000\widowpenalty4000 \sfcode`\.=1000\relax}
\let\original@bibliographystyle=\bibliographystyle
\let\original@bibliography=\bibliography
\def\bibliography#1{\original@bibliographystyle{dr-bibbib}%
                    %\begin{nonfrench}%
                    \original@bibliography{#1}%
